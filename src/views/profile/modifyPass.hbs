<div class="container">
    <div class="card">
        <div class="card-body">
            <h5>Troca de senha</h5>
            <hr>
            <form action="/profile/account/register" method="post">
                <div class="row">
                    <div class="col"></div>
                    <div class="col">
                        <label for="password">Digite sua nova senha</label>
                        <input type="password" name="password" id="password" class="form-control"
                            placeholder="Digite sua nova senha">
                        <label for="password_tow">Repita sua nova senha</label>
                        <input type="password" name="password_tow" id="password_tow" class="form-control"
                            placeholder="Repita sua nova senha">
                        <button class="btn btn-info mt-3 col-12">Enviar</button>
                    </div>
                    <div class="col"></div>
                </div>
            </form>
        </div>
    </div>
</div>