
{{#each ORDER}}
<div class="modal" tabindex="-1" role="dialog" id="modalPedido{{this.order}}">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Pedido nº {{this.order}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <h5 class="text-center">Dados do cliente</h5>
                    <hr>
                    <div class="container">
                        <div class="row">
                            <div class="col-6">
                                <h5><Strong><i class="fas fa-user-circle"></i></Strong> Fulano</h5>
                            </div>
                            <div class="col-6">
                                <h5><Strong><i class="fas fa-mobile-alt"></i></Strong> (24) 99888888</h5>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-9">
                                <label for="">Endereço</label>
                                <input type="text" class="form-control" value="">
                            </div>
                            <div class="col-3">
                                <label for="">Numero</label>
                                <input type="text" class="form-control" value="">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label for="cidade">Cidade</label>
                                <input type="text" name="" id="" class="form-control">
                            </div>
                            <div class="col">
                                <label for="">Complemento</label>
                                <input type="text" name="" id="" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <h5 class="text-center mt-3">Dados do Pedido</h5>
                        <hr>
                        <div class="row">
                            <div class="col-7">
                                <label for="">Pedido</label>
                                <input type="text" class="form-control" value="X-Tudo">
                            </div>
                            <div class="col-3">
                                <label for="" class="ml-3">QTD</label>
                                <input type="text" class="form-control" value="10.00">
                            </div>
                            <div class="col-1 mt-2">
                                <button class="btn btn-danger mt-4">+</button>
                            </div>
                        </div>
                    </div>
                    <div class="containter mt-3">
                        <hr>
                        <p class="text-center">SubTotal: R$ 50.00 - Entrega: R$ 50.00 </p>
                        <h5 class="text-center">Valor: R$ 50.00</h5>
                        <div class="row">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Salvar Alterações</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
{{/each}}